<body>

    <h1>üèÜ My Personal Achievement Hall of Fame ‚ú®</h1>

    <div id="sort-container">
        <button class="sort-button" onclick="sortTable('rank')">Rank</button>
        <button class="sort-button" onclick="sortTable('title')">Achievement Title</button>
        <button class="sort-button" onclick="sortTable('dateEarned')">Date Earned</button>
    </div>

    <div id="achievement-list">
        <!-- Cards will be inserted by JavaScript -->
    </div>

    <script>
        // --- IMPORTANT: This script loads the data from achievementData.js ---
        // Since we cannot directly import in this HTML context, we assume 'achievements' 
        // is defined in the separate file and is globally available.

        // Fallback for demonstration if achievementData.js isn't linked correctly
        const achievements = (typeof achievements === 'undefined') ? [
            { rank: 1, title: "Cyber Circles 3 Runs", game: "Geometry Dash", description: "The peak of my skill: achieved three perfect, consecutive runs of this high-tier Extreme Demon level. The run took over 10,000 attempts to complete.", dateEarned: "2025-11-15", proofLink: "https://youtube.com/my-cyber-circles-proof" },
            { rank: 2, title: "Legendary Forger", game: "Fantasy MMO", description: "Maxed out all seven crafting professions, requiring hundreds of hours of grinding.", dateEarned: "2024-08-20", proofLink: "#" },
            { rank: 3, title: "Perfectionist Pilot", game: "Flight Simulator", description: "Successfully landed a Boeing 747 in a category 3 storm at night with zero-visibility.", dateEarned: "2023-05-10", proofLink: "https://twitch.tv/my-pilot-clip" },
            { rank: 4, title: "Eternal Champion (No Deaths)", game: "Roguelike RPG", description: "Beat the final boss of the hardest difficulty mode without taking a single death.", dateEarned: "2024-01-01", proofLink: "#" }
        ] : achievements;
        
        // --- JAVASCRIPT LOGIC (GENERATES THE CARDS AND HANDLES SORTING) ---

        const achievementListContainer = document.getElementById('achievement-list');
        let sortKey = 'rank'; // Default sort key
        let sortDirection = 1; // 1 for ascending, -1 for descending

        function getRankClass(rank) {
            if (rank === 1) return 'rank-1';
            if (rank === 2) return 'rank-2';
            if (rank === 3) return 'rank-3';
            return ''; 
        }

        function renderAchievements(list) {
            achievementListContainer.innerHTML = ''; 
            list.forEach(item => {
                const proofText = item.proofLink && item.proofLink !== '#' 
                    ? `<a href="${item.proofLink}" target="_blank" class="proof-link">View Proof &rarr;</a>` 
                    : `<span style="color: #64748b;">Proof not available</span>`;

                const cardHTML = `
                    <div class="achievement-card">
                        <div class="rank-column ${getRankClass(item.rank)}">
                            ${item.rank}
                        </div>
                        <div class="content-column">
                            <div class="title-bar">
                                <span class="achievement-title">${item.title}</span>
                                <span class="achievement-game">${item.game}</span>
                            </div>
                            <p class="achievement-description">${item.description}</p>
                            <div class="details-bar">
                                <span>Earned: ${item.dateEarned}</span>
                                ${proofText}
                            </div>
                        </div>
                    </div>
                `;
                achievementListContainer.innerHTML += cardHTML;
            });
        }

        function sortTable(key) {
            sortDirection = (sortKey === key) ? sortDirection * -1 : 1;
            sortKey = key;

            const sortedList = achievements.sort((a, b) => {
                let comparison = 0;
                
                if (typeof a[key] === 'number') {
                    comparison = a[key] - b[key];
                } 
                else if (key === 'dateEarned') {
                    // Sorting by date (newest/oldest)
                    comparison = new Date(a[key]) - new Date(b[key]);
                }
                else {
                    const nameA = a[key].toUpperCase(); 
                    const nameB = b[key].toUpperCase();
                    if (nameA > nameB) comparison = 1;
                    else if (nameA < nameB) comparison = -1;
                }
                
                return comparison * sortDirection;
            });

            renderAchievements(sortedList);
        }

        // Initial render (sort by rank first)
        document.addEventListener('DOMContentLoaded', () => {
            renderAchievements(achievements.sort((a, b) => a.rank - b.rank));
        });

    </script>

</body>
</html>
